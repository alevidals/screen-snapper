---
import { cn } from "@src/lib/utils";
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"button">;

const { class: className, ...props } = Astro.props;
---

<button
  class={cn(
    "inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-red-400 text-stone-950 shadow hover:bg-red-400/80 h-9 px-4 py-2",
    className
  )}
  {...props}
>
  <slot />
</button>

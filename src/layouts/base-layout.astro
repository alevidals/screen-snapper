---
import "@src/styles.css";

import Header from "@components/header.astro";
import Footer from "@components/footer.astro";

type Props = {
  title?: string;
  description: string;
};

type OpenGraph = {
  url: string;
  imageUrl: string;
  width: number;
  height: number;
  type: string;
};

const { origin } = Astro.url;

const { title, description } = Astro.props;

const openGraph: OpenGraph = {
  url: origin,
  imageUrl: `${origin}/og.png`,
  width: 1200,
  height: 630,
  type: "website",
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="keywords"
      content="screen recording, screen capture, screen capture software, screen capture tool, screen capture app, screen capture application, screen recorder, screen recorder software, screen recorder tool, screen recorder app, screen recorder application, screen snap, screen snapper, screen snapping, screen snap software, screen snap tool, screen snap app, screen snap application"
    />
    <meta name="description" content={description} />
    <meta name="author" content="alevidals" />
    <link rel="author" href="https://github.com/alevidals" />
    <meta name="creator" content="alevidals" />
    <meta property="og:title" content={title ?? "ScreenSnapper"} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={openGraph.url} />
    <meta property="og:site_name" content="ScreenSnapper" />
    <meta property="og:image" content={openGraph.imageUrl} />
    <meta property="og:image:width" content={String(openGraph.width)} />
    <meta property="og:image:height" content={String(openGraph.height)} />
    <meta property="og:image:alt" content="ScreenSnapper" />
    <meta property="og:type" content={openGraph.type} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title ?? "ScreenSnapper"} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={openGraph.imageUrl} />
    <meta name="twitter:image:width" content={String(openGraph.width)} />
    <meta name="twitter:image:height" content={String(openGraph.height)} />
    <meta name="twitter:image:alt" content="ScreenSnapper" />
    <title>{title ?? "ScreenSnapper"}</title>
  </head>
  <body class="bg-zinc-950 text-zinc-100 min-h-dvh flex flex-col">
    <Header />
    <main class="flex-1 container mx-auto px-4">
      <slot />
    </main>
    <Footer />
  </body>
</html>
